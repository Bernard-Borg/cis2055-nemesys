@model EditInvestigationViewModel

@{
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
    ViewData["Title"] = "Create an investigation";
}

<form asp-area="" asp-controller="Investigation" asp-action="Create" method="post">
    @Html.DisplayFor(model => model.Description)
    @Html.DisplayFor(model => model.DateOfAction)
    <div class="form-group">
        <label asp-for="@Model.StatusId"></label>
        <select class="form-select" asp-for="@Model.StatusId"
                asp-items="@(new SelectList(Model.ReportStatuses, "StatusId", "StatusName"))">
            <option value="">Select a status</option>
        </select>
        <span asp-validation-for="@Model.StatusId" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <button type="submit" class="btn btn-outline-light">Create Investigation</button>
    </div>
</form>

@section scripts {
    <script src="~/scripts/textarea-counter.js" async defer></script>
}