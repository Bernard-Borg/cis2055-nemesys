@model EditInvestigationViewModel

@{
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
    ViewData["Title"] = "Edit Investigation";
}

<form asp-area="" asp-controller="Investigation" asp-action="Edit" method="post">
    <noscript>Enabling JavaScript is recommended for a better user experience. Click <a href="https://www.enable-javascript.com/">here</a> to learn how</noscript>
    <div class="form-group">
        <label asp-for="@Model.Description"></label>
        <div class="textarea-with-counter">
            <textarea asp-for="@Model.Description" class="form-control" rows="4"></textarea>
            <span class="textarea-counter"></span>
        </div>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.DateOfAction"></label>
        <input asp-for="@Model.DateOfAction" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" min="@DateTime.Now.AddYears(-1).ToString("yyyy-MM-ddThh:mm")" />
        <span asp-validation-for="@Model.DateOfAction" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.StatusId"></label>
        <select class="form-select" asp-for="@Model.StatusId"
                asp-items="@(new SelectList(Model.ReportStatuses, "StatusId", "StatusName"))">
            <option value="">Select a status</option>
        </select>
        <span asp-validation-for="@Model.StatusId" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <button type="submit" class="btn btn-outline-light">Submit Report</button>
    </div>
</form>

@section scripts {
    <script type="text/javascript" src="~/scripts/textarea-counter.js" async defer></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}