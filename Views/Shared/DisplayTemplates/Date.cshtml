@model DateTime?

<div class="form-group">
    <label asp-for="@Model"></label>
    <input asp-for="@Model" class="form-control" max="@DateTime.UtcNow.ToString("yyyy-MM-ddThh:mm")" min="@DateTime.UtcNow.AddYears(-1).ToString("yyyy-MM-ddThh:mm")" />
    <span asp-validation-for="@Model" class="text-danger"></span>
</div>