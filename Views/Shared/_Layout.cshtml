@using Microsoft.AspNetCore.Identity
@using Nemesys.Models; 

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>@ViewData["Title"] | Nemesys</title>
    @RenderSection("head", required: false)
</head>
<body class="bodycolour">
    <header>
        <div class="container-fluid d-grid gap-4 align-items-center p-3" style="grid-template-columns: 1fr 2fr 0.75fr 0.25fr;">
            <!--NEMESYS "logo"-->
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                <h2 class="m-0 text-white" style="font-size: 32px;">NEMESYS</h2>
            </a>

            <!--Search bar and button-->
            <div>
                <div class="d-flex justify-content-end">
                    <button class="navbar-toggler btn-outline-light d-lg-none border-light p-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="bi bi-search"></i>
                    </button>
                </div>

                <!--Search bar-->
                <div class="d-none d-lg-block">
                    <form class="w-100 d-flex">
                        <input class="form-control m-0" type="search" placeholder="Search Reports..." aria-label="Search">
                    </form>
                </div>
            </div>

            <!--Add Report button-->
            <div class="d-flex justify-content-md-around justify-content-lg-end">
                <a class="btn btn-outline-light" style="width: 125px;" asp-area="" asp-controller="Report" asp-action="Submit">Add Report</a>
            </div>

            <!--Drop down profile menu-->
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="dropdown d-flex justify-content-center">
                    <a href="#" class="d-block link-light text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="/images/defaultprofile.png" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUser">
                        <li><a class="dropdown-item" asp-area="" asp-controller="Profile" asp-route-id="1@*Add session.UserId here*@">My Profile</a></li>
                        <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
            }
        </div>

        <!--Drop down search bar-->
        <div class="collapse navbar-collapse d-lg-none" id="navbarCollapse">
            <form class="d-flex p-3" style="background-color: black;">
                <input class="form-control" type="search" placeholder="Search Reports..." aria-label="Search" style="font-family: 'Work Sans'">
            </form>
        </div>
    </header>
    @RenderBody()
    @RenderSection("scripts", required: false)
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validate-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>