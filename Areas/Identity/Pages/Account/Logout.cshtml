@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
}

@{
    if (User.Identity.IsAuthenticated)
    {
        <form class="form-inline d-flex align-items-center flex-column mt-5" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link mt-2 mb-3 btn btn-lg btn-outline-light">Click here to Logout</button>
        </form>
    }
    else
    {
        <p>You have successfully logged out of the application.</p>
    }
}
