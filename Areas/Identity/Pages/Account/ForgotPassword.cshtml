@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 class="text-light text-center mt-5">@ViewData["Title"]</h1>
<h4 class="text-light text-center">Enter your email.</h4>
<hr />
<div class="text-light d-flex justify-content-center row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center">
                    <button type="submit" class="mt-2 mb-3 btn btn-outline-light justify-content-center">Submit</button>
                </div>
        </form>
    </div>
</div>