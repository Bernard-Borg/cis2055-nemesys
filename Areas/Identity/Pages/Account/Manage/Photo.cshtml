@page
@model PhotoModel
@{
    ViewData["Title"] = "Manage Photo";
    ViewData["ActivePage"] = ManageNavPages.Photo;
}

<h3 class="text-light">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row text-light form-group d-flex">
    <div class="col-md-6">
        <form id="change-bio-form" method="post" enctype="multipart/form-data">
            <img class="mt-3" @*onerror="style.opacity='0'"*@ width="200" src="@Model.ImageUrl" alt="Current report image" />
            <div class="form-group mt-3">
                <label asp-for="Input.NewPhoto"></label>
                <input asp-for="Input.NewPhoto" class="form-control" accept=".jpg, .jpeg, .png, .webp" />
                <span asp-validation-for="Input.NewPhoto" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <button type="submit" class="mt-2 mb-3 btn btn-lg btn-outline-light">Update Photo</button>
            </div>
        </form>
    </div>
</div>