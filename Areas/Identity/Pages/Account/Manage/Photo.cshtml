@page
@model PhotoModel
@{
    ViewData["Title"] = "Manage Photo";
    ViewData["ActivePage"] = ManageNavPages.Photo;
}

<h3 class="text-light">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row text-light form-group d-flex">
    <div class="col-md-6">
        <form id="change-bio-form" method="post" enctype="multipart/form-data">
            <img class="mt-3" width="200" src="@Model.ImageUrl" alt="Your current profile image" />
            <div class="mt-3">
                @Html.DisplayFor(model => model.Input.NewPhoto)
            </div>
            <div class="form-group d-flex">
                <button type="submit" class="mt-2 mb-3 btn btn-lg btn-outline-light">Update Photo</button>
            </div>
        </form>
    </div>
</div>