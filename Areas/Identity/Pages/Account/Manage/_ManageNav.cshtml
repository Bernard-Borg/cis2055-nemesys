@inject SignInManager<User> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills custom-rounded flex-column" style="background: #191919;">
    <li class="nav-item"><a class="text-light half-rounded-top nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Username</a></li>
    <li class="nav-item"><a class="text-light nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item"><a class="text-light nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>
    <li class="nav-item"><a class="text-light nav-link @ManageNavPages.BioNavClass(ViewContext)" id="email" asp-page="./Bio">Bio</a></li>
    <li class="nav-item"><a class="text-light nav-link @ManageNavPages.PhotoNavClass(ViewContext)" id="email" asp-page="./Photo">Photo</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="text-light nav-item link-light"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class="nav-item link-light"><a class="text-light half-rounded-bottom nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li>
</ul>
